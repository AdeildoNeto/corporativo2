<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <el-resolver>
            org.primefaces.application.exceptionhandler.PrimeExceptionHandlerELResolver
        </el-resolver>
        <locale-config>
            <default-locale>pt_BR</default-locale>
            <supported-locale>pt_BR</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>mensagens.mensagem</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <factory>
        <exception-handler-factory>
            org.primefaces.application.exceptionhandler.PrimeExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>goLogin</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <!-- PROFESSOR -->
        <navigation-case>
            <from-outcome>goAddQuestao</from-outcome>
            <to-view-id>/professor/questao/adicionar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goListarQuestao</from-outcome>
            <to-view-id>/professor/questao/listar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goAlterarQuestao</from-outcome>
            <to-view-id>/professor/questao/editar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goListarProva</from-outcome>
            <to-view-id>/professor/prova/listar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goDetalharProva</from-outcome>
            <to-view-id>/professor/prova/detalhar</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goImprimirProva</from-outcome>
            <to-view-id>/professor/prova/imprimir.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goGerarProva</from-outcome>
            <to-view-id>/professor/prova/gerar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goResultadosProva</from-outcome>
            <to-view-id>/professor/prova/resultado/listar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goDetalharResultadoProva</from-outcome>
            <to-view-id>/professor/prova/resultado/detalhar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goGerarSimulado</from-outcome>
            <to-view-id>/professor/simulado/gerar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goLisarSimulado</from-outcome>
            <to-view-id>/professor/simulado/listar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goVisualizarSimulado</from-outcome>
            <to-view-id>/professor/simulado/visualizar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goResultadosSimulado</from-outcome>
            <to-view-id>/professor/simulado/resultado/listar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goDetalharResultadoSimulado</from-outcome>
            <to-view-id>/professor/simulado/resultado/detalhar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goMinhasTurmas</from-outcome>
            <to-view-id>/professor/turma/listar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goCadastrarTurma</from-outcome>
            <to-view-id>/professor/turma/cadastrar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goDetalharTurma</from-outcome>
            <to-view-id>/professor/turma/detalhar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goHomeProfessor</from-outcome>
            <to-view-id>/professor/home.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        
        <!-- ALUNO -->
        <navigation-case>
            <from-outcome>goHomeAluno</from-outcome>
            <to-view-id>/aluno/home.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goProcurarSimulado</from-outcome>
            <to-view-id>/aluno/simulado/listar.xhml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goIniciarSimulado</from-outcome>
            <to-view-id>/aluno/simulado/simulado.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goListarProvas</from-outcome>
            <to-view-id>/aluno/prova/listar.xhml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goIniciarProva</from-outcome>
            <to-view-id>/aluno/prova/prova.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goListarResultados</from-outcome>
            <to-view-id>/aluno/resultado/listar.xhml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goDetalharResultadoAluno</from-outcome>
            <to-view-id>/aluno/resultado/detalhar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goListarResultadosSimuladoAluno</from-outcome>
            <to-view-id>/aluno/simulado/resultado/listar.xhml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>goDetalharResultadoSimuladoAluno</from-outcome>
            <to-view-id>/aluno/simulado/resultado/detalhar.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
</faces-config>
